<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/fcr_text_enabled_color" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/fcr_text_enabled_color" />
            <corners android:radius="6dp" />
        </shape>
    </item>

    <item android:state_enabled="false" android:state_selected="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/fcr_icon_normal_color" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</selector>
