<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="animate_dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_in_out_bottom</item>
    </style>

    <style name="dialog_recall" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!--指定Dialog的主题-->
    <style name="Dialog.Light" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/fcr_icon_fill_color</item>
    </style>
    
    <style name="normal_role_bg_style">
        <item name="android:background">@drawable/fcr_normal_role_bg</item>
        <item name="android:textColor">@color/fcr_text_level1_color</item>
    </style>

    <style name="lecturer_role_bg_style">
        <item name="android:background">@drawable/fcr_lecturer_role_bg</item>
        <item name="android:textColor">@color/fcr_icon_fill_color</item>
    </style>

    <style name="mute_bg_style">
        <item name="android:background">@drawable/fcr_blue_round_bg</item>
        <item name="android:textColor">@color/fcr_text_contrast_color</item>
    </style>

    <style name="white_bg">
        <item name="android:background">@color/fcr_system_component_color</item>
    </style>

    <style name="im_white_bg">
        <item name="android:background">@color/fcr_system_background_color</item>
    </style>

    <style name="blue_bg_white_style">
        <item name="android:background">@drawable/fcr_blue_round_bg</item>
        <item name="android:textColor">@color/fcr_text_contrast_color</item>
    </style>

    <style name="white_bg_gray_style">
        <item name="android:background">@drawable/fcr_announcement_white_round_bg</item>
        <item name="android:textColor">@color/fcr_text_contrast_color</item>
    </style>

    <style name="RightInAndOutStyle">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_in_out_right</item>
    </style>
</resources>