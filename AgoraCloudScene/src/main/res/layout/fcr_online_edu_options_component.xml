<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:layout_marginBottom="@dimen/dp_4"
    android:gravity="bottom|right"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option_item_asking"
        android:layout_width="@dimen/agora_option_item_w"
        android:layout_height="@dimen/agora_option_item_w"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_asking_icon_bg"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_6"
        android:src="@drawable/agora_options_icon_asking_d"
        android:visibility="gone" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option_item_setting"
        android:layout_width="@dimen/agora_option_item_w"
        android:layout_height="@dimen/agora_option_item_w"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_icon_bg"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_6"
        android:src="@drawable/fcr_option_icon_setting_icon"
        android:visibility="gone"
        tools:visibility="visible" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option_item_toolbox"
        android:layout_width="@dimen/agora_option_item_w"
        android:layout_height="@dimen/agora_option_item_w"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_icon_bg"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_6"
        android:src="@drawable/agora_option_icon_toolbox"
        android:visibility="gone"
        tools:visibility="visible" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/option_item_chat"
            android:layout_width="@dimen/agora_option_item_w"
            android:layout_height="@dimen/agora_option_item_w"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/fcr_option_icon_bg"
            android:elevation="@dimen/dp_5"
            android:padding="@dimen/dp_6"
            android:src="@drawable/agora_option_icon_chat"
            android:visibility="gone"
            tools:visibility="visible" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/option_item_chat_news"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="right"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/waving_list_icon_red"
            android:elevation="@dimen/dp_5"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option_item_roster"
        android:layout_width="@dimen/agora_option_item_w"
        android:layout_height="@dimen/agora_option_item_w"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_icon_bg"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_6"
        android:src="@drawable/agora_option_icon_roster"
        android:visibility="gone"
        tools:visibility="visible" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="44dp">

        <LinearLayout
            android:id="@+id/option_show_handup"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@drawable/agora_handsup_bg2x"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="0dp"
                android:lines="1"
                android:text="@string/fcr_lower_hand"
                android:textColor="#586376"
                android:textSize="12sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/agora_option_item_w"
                android:layout_height="@dimen/agora_option_item_w"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="@dimen/dp_5" />
        </LinearLayout>

        <io.agora.online.options.AgoraEduHandsUpComponent
            android:id="@+id/option_item_handup"
            android:layout_width="@dimen/agora_option_item_w"
            android:layout_height="@dimen/agora_option_item_w"
            android:layout_gravity="top|right"
            android:layout_margin="@dimen/dp_5"
            android:background="@drawable/fcr_option_icon_bg"
            android:elevation="@dimen/dp_5"
            android:src="@drawable/agora_handsup_bg"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/option_item_open_board"
        android:layout_width="@dimen/agora_option_item_w"
        android:layout_height="@dimen/agora_option_item_w"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_icon_bg"
        android:elevation="@dimen/dp_5"
        android:padding="@dimen/dp_6"
        android:src="@drawable/agora_appliance_wb_open"
        android:visibility="gone"
        tools:visibility="visible" />

    <io.agora.online.options.AgoraEduWhiteboardOptionsComponent
        android:id="@+id/option_item_whiteboard_tool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_5"
        android:background="@drawable/fcr_option_icon_whiteboard_bg"
        android:elevation="@dimen/dp_5"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>