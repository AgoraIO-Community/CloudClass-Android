<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/options_setting"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:src="@drawable/agora_options_icon_setting"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/options_upload"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:src="@drawable/agora_options_icon_upload"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/options_roster"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:src="@drawable/agora_options_icon_roster"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/options_chat"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:src="@drawable/agora_options_icon_chat"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/options_handsup"
        android:layout_width="@dimen/option_icon_size"
        android:layout_height="@dimen/option_icon_size"
        android:src="@drawable/agora_options_icon_handsup_default"
        android:scaleType="fitXY"/>
</LinearLayout>