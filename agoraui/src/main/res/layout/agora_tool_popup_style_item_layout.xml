<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/agora_tool_popup_style_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/agora_tool_popup_style_select_dot"
        android:layout_width="@dimen/agora_tool_popup_select_dot_size"
        android:layout_height="@dimen/agora_tool_popup_select_dot_size"
        android:layout_centerHorizontal="true"
        android:background="@color/theme_border_dialog_icon"/>
</RelativeLayout>