<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/agora_toast_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="@dimen/agora_toast_msg_margin_start"
            android:layout_marginTop="@dimen/agora_toast_msg_margin_top"
            android:layout_marginEnd="@dimen/agora_toast_msg_margin_end"
            android:layout_marginBottom="@dimen/agora_toast_msg_margin_bottom"
            android:alpha="0.8"
            android:text="距离教室结束还有8分钟"
            android:textColor="@color/theme_white"
            android:textSize="@dimen/text_medium" />

    </RelativeLayout>

</LinearLayout>