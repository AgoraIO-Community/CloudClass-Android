<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/agora_hands_up_view_w"
    android:layout_height="@dimen/agora_hands_up_view_h"
    android:gravity="center">

    <ImageView
        android:id="@+id/hands_up_img"
        android:layout_width="@dimen/agora_hands_up_view_w"
        android:layout_height="@dimen/agora_hands_up_view_w"
        android:background="@drawable/agora_handsup_down_img"/>

    <TextView
        android:id="@+id/count_down_text"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@drawable/agora_handsup_btn_bg"
        android:textColor="@color/white"
        android:textSize="17sp"/>

</FrameLayout>