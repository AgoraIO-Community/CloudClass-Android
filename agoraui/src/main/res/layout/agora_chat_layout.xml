<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/agora_chat_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/agora_class_room_round_rect_bg">
        <RelativeLayout
            android:id="@+id/agora_chat_title_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_message_title_layout_height">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_chat_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_large"
                android:layout_marginLeft="@dimen/margin_large"
                android:text="@string/agora_message_title"
                android:textColor="@color/theme_text_color_black"
                android:textSize="@dimen/text_size_small"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/agora_chat_close"
                android:layout_width="@dimen/agora_message_close_icon_size"
                android:layout_height="@dimen/agora_message_close_icon_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:scaleType="fitXY"
                android:src="@drawable/agora_message_close"/>
        </RelativeLayout>
        <View
            android:id="@+id/agora_chat_title_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/stroke_small"
            android:layout_below="@id/agora_chat_title_layout"
            android:background="@color/theme_border_class_room"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/agora_chat_message_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/agora_chat_title_divider"
            android:layout_above="@id/agora_chat_input_layout"
            android:layout_marginBottom="@dimen/margin_small">
        </androidx.recyclerview.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/agora_chat_no_message_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/agora_chat_title_divider"
            android:layout_above="@id/agora_chat_input_layout">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/agora_chat_no_message_icon"
                    android:layout_width="@dimen/agora_message_no_content_icon_size"
                    android:layout_height="@dimen/agora_message_no_content_icon_size"
                    android:src="@drawable/agora_chat_icon_no_message"
                    android:scaleType="fitXY"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/agora_chat_no_message_icon"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:layout_centerHorizontal="true"
                    android:text="@string/agora_message_none_text"
                    android:textSize="@dimen/text_size_small"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/agora_chat_student_mute_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_message_caution_height"
            android:layout_below="@id/agora_chat_title_divider"
            android:orientation="vertical"
            android:background="@color/theme_gray_lighter">
            <RelativeLayout
                android:id="@+id/agora_chat_student_mute_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/agora_chat_student_mute_icon"
                    android:layout_width="@dimen/agora_message_caution_icon_size"
                    android:layout_height="@dimen/agora_message_caution_icon_size"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/agora_icon_red_caution" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/agora_chat_student_mute_icon"
                    android:layout_marginStart="@dimen/margin_medium"
                    android:layout_marginLeft="@dimen/margin_medium"
                    android:text="@string/agora_message_student_chat_mute_tips"
                    android:textColor="@color/theme_text_color_black"/>
            </RelativeLayout>
            <View android:layout_width="match_parent"
                android:layout_height="@dimen/stroke_small"
                android:background="@color/theme_border_class_room"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/agora_chat_input_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_message_input_layout_height"
            android:background="@drawable/agora_chat_layout_gray_bg"
            android:layout_alignParentBottom="true">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/agora_chat_message_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/agora_chat_send_btn"
                android:layout_toLeftOf="@id/agora_chat_send_btn"
                android:layout_marginStart="@dimen/agora_message_input_margin"
                android:layout_marginLeft="@dimen/agora_message_input_margin"
                android:layout_marginEnd="@dimen/agora_message_input_margin"
                android:layout_marginRight="@dimen/agora_message_input_margin"
                android:lines="1"
                android:singleLine="true"
                android:imeOptions="actionSend"
                android:hint="@string/agora_message_input_hint"
                android:textColorHint="@color/theme_text_color_gray"
                android:textColor="@color/theme_text_color_gray"
                android:textSize="@dimen/text_size_small"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_chat_send_btn"
                android:layout_width="@dimen/agora_message_send_btn_width"
                android:layout_height="@dimen/agora_message_send_btn_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/agora_message_input_margin"
                android:layout_marginRight="@dimen/agora_message_input_margin"
                android:textAlignment="gravity"
                android:gravity="center"
                android:text="@string/agora_message_send"
                android:textSize="@dimen/text_size_small"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agora_chat_hide_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/agora_chat_hide_icon"
            android:layout_width="@dimen/agora_message_hide_icon_size"
            android:layout_height="@dimen/agora_message_hide_icon_size"
            android:layout_centerInParent="true"
            android:src="@drawable/agora_chat_hide_icon"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/agora_chat_unread_text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/agora_message_unread_count_size"
            android:minWidth="@dimen/agora_message_unread_count_size"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingStart="@dimen/margin_small"
            android:paddingLeft="@dimen/margin_small"
            android:paddingEnd="@dimen/margin_small"
            android:paddingRight="@dimen/margin_small"
            android:gravity="center"
            android:background="@drawable/agora_chat_icon_red"
            android:textSize="@dimen/text_size_smallest"
            android:textColor="@android:color/white"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>