<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AgoraAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/fcrcolorPrimary</item>
        <item name="colorPrimaryDark">@color/fcrcolorPrimaryDark</item>
        <item name="colorAccent">@color/fcrcolorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AgoraAppThemeFullScreen" parent="AgoraAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>