<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="190dp"
    android:layout_height="110dp"
    xmlns:countdownClock="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_radius"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="190dp"
        android:layout_height="110dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/countdown_title"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/dialog_bg_top">
            <TextView
                android:id="@+id/countdown_title_text"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginStart="9dp"
                android:layout_marginLeft="9dp"
                android:layout_centerVertical="true"
                android:textAlignment="gravity"
                android:gravity="center_vertical"
                android:textColor="#191919"
                android:text="@string/count_down_str"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#EEEEF7"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:background="@drawable/background_bottom">
            <io.agora.extension.impl.countdown.CountDownClock
                android:id="@+id/countdown_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_centerInParent="true"
                countdownClock:almostFinishedCallbackTimeInSeconds="3"
                countdownClock:animationDuration="320"
                countdownClock:countdownTickInterval="250"
                countdownClock:digitBottomDrawable="@drawable/background_bottom"
                countdownClock:digitDividerColor="@color/white2"
                countdownClock:digitPadding="4dp"
                countdownClock:digitSplitterColor="@color/deep_blue"
                countdownClock:digitTextColor="@color/deep_blue"
                countdownClock:digitTextSize="40dp"
                countdownClock:digitTopDrawable="@drawable/background_top"
                countdownClock:digitWidth="34dp"
                countdownClock:halfDigitHeight="25dp"
                countdownClock:resetSymbol="0"
                countdownClock:splitterPadding="4dp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>