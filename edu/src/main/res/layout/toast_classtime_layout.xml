<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/toast_normal_bg">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/toast_normal_content_margin_top"
            android:layout_marginBottom="@dimen/toast_normal_content_margin_bottom"
            android:layout_marginStart="@dimen/toast_normal_content_margin_start"
            android:layout_marginEnd="@dimen/toast_normal_content_margin_end"
            android:alpha="0.8"
            android:text="距离教室结束还有8分钟"
            android:textColor="@color/toast_normal_content_text"
            android:textSize="@dimen/toast_normal_content_text"/>

    </RelativeLayout>

</LinearLayout>