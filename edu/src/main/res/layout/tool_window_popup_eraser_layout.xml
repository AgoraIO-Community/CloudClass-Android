<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/tool_window_popup_width"
    android:layout_height="@dimen/tool_window_popup_height_eraser"
    android:background="@drawable/tool_window_dialog_188x58_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/tool_window_popup_content_left_margin">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tool_window_popup_recycler_thickness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>