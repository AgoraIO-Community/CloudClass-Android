<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/video_window_bg"
    android:padding="@dimen/video_window_padding">

    <FrameLayout
        android:id="@+id/textureContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/video_window_texture_layout_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/options_Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/video_window_options_layout_margin">

            <LinearLayout
                android:id="@+id/trophy_Layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/video_window_trophy_bg"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/video_window_trophy_layout_start_padding"
                android:paddingTop="@dimen/video_window_trophy_layout_top_padding"
                android:paddingEnd="@dimen/video_window_trophy_layout_end_padding"
                android:paddingBottom="@dimen/video_window_trophy_layout_bottom_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_window_ic_trophy"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/trophyNum_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxEms="4"
                    android:gravity="center_vertical"
                    android:ellipsize="end"
                    android:text="x99+"
                    android:layout_marginStart="@dimen/video_window_trophy_start_padding"
                    android:textSize="@dimen/video_window_trophy_text_size"
                    android:textColor="@color/video_window_trophy_text"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_packup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:padding="@dimen/video_window_packup_img_padding"
                android:src="@mipmap/video_window_ic_packup"/>

            <io.agora.apaaspoc.video.AudioView
                android:id="@+id/ic_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@id/ic_audio"
                android:layout_marginEnd="@dimen/video_window_video_img_end_margin"
                app:layout_constraintBottom_toBottomOf="parent"
                android:src="@drawable/video_window_ic_video" />

            <LinearLayout
                android:id="@+id/username_Layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:background="@drawable/video_window_username_bg"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/video_window_username_layout_start_padding"
                android:paddingTop="@dimen/video_window_username_layout_top_padding"
                android:paddingEnd="@dimen/video_window_username_layout_end_padding"
                android:paddingBottom="@dimen/video_window_username_layout_bottom_padding">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/video_window_ic_username"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxEms="4"
                    android:ellipsize="end"
                    android:text="NancyNancyNancyNancy"
                    android:layout_marginStart="@dimen/video_window_username_start_padding"
                    android:textSize="@dimen/video_window_username_text_size"
                    android:textColor="@color/video_window_username_text"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/videoOff_Layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/video_window_holdon_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/videoOff_Img"
                android:layout_width="@dimen/video_window_videooff_img_w"
                android:layout_height="@dimen/video_window_videooff_img_h"
                android:src="@drawable/video_window_img_video_off"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/videoOff_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/video_window_camera_off"
                android:textColor="@color/video_window_videooff_text"
                android:textSize="@dimen/video_window_videooff_text"
                android:layout_marginTop="@dimen/video_window_videooff_text_margin_top"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/waitTeacher_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/video_window_holdon_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/waitTeacher_Img"
                android:layout_width="@dimen/video_window_waitteacher_img_w"
                android:layout_height="@dimen/video_window_waitteacher_img_h"
                android:src="@drawable/video_window_img_wait_teacher"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/waitTeacher_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/video_window_wait_teacher"
                android:textColor="@color/video_window_waitteacher_text"
                android:textSize="@dimen/video_window_waitteacher_text"
                android:layout_marginTop="@dimen/video_window_waitteacher_text_margin_top"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/teacherLeave_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/video_window_holdon_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/teacherLeave_Img"
                android:layout_width="@dimen/video_window_teacherleave_img_w"
                android:layout_height="@dimen/video_window_teacherleave_img_h"
                android:src="@drawable/video_window_img_teacher_leave"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/teacherLeave_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/video_window_teacher_leave"
                android:textColor="@color/video_window_teacherleave_text"
                android:textSize="@dimen/video_window_teacherleave_text"
                android:layout_marginTop="@dimen/video_window_teacherleave_text_margin_top"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/noCamera_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/video_window_holdon_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/noCamera_Img"
                android:layout_width="@dimen/video_window_nocamera_img_w"
                android:layout_height="@dimen/video_window_nocamera_img_h"
                android:src="@drawable/video_window_img_no_camera"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/noCamera_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/video_window_no_camera"
                android:textColor="@color/video_window_nocamera_text"
                android:textSize="@dimen/video_window_nocamera_text"
                android:layout_marginTop="@dimen/video_window_nocamera_text_margin_top"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>