<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_8"
    android:paddingBottom="@dimen/dp_8">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="1"
        android:text="nihaoyaasdfasdfasfsdfasdfsdf"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        android:ellipsize="end"
        android:maxEms="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_mute_video"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center_vertical|start|left"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="@dimen/sp_18"
        android:autoSizeMinTextSize="@dimen/sp_10"
        android:autoSizeStepGranularity="1sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_mute_audio"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_11"
        android:src="@drawable/ic_audio_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_mute_video"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/ic_video_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_mute_audio"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>