<?xml version="1.0" encoding="utf-8"?>
<io.agora.edu.classroom.widget.view.RectRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/tool_window_option_layout_width"
    android:layout_height="@dimen/tool_window_option_layout_height">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tool_window_option_item_icon"
        android:layout_width="@dimen/tool_window_option_icon_size"
        android:layout_height="@dimen/tool_window_option_icon_size"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tool_window_option_item_more"
        android:layout_width="@dimen/tool_window_option_more_size"
        android:layout_height="@dimen/tool_window_option_more_size"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/tool_window_option_item_icon"
        android:src="@drawable/tool_window_option_icon_more_unselect"/>
</io.agora.edu.classroom.widget.view.RectRelativeLayout>