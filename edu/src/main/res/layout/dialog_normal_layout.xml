<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/bg_View"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/dialog_content_bg"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_marginBottom="@dimen/dp_6"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/close"
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_18"
            android:padding="@dimen/dp_4"
            app:layout_constraintTop_toTopOf="@id/bg_View"
            app:layout_constraintEnd_toEndOf="@id/bg_View"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginEnd="@dimen/dp_10"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/contentImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/bg_View"
            app:layout_constraintTop_toTopOf="@id/bg_View"
            app:layout_constraintEnd_toEndOf="@id/bg_View"
            android:layout_marginTop="@dimen/dp_14"
            android:src="@android:drawable/ic_menu_gallery"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/dp_160"
            android:gravity="center"
            android:text="课程还未结束，是否确定退出教室？"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/dialog_content_text"
            app:layout_constraintStart_toStartOf="@id/bg_View"
            app:layout_constraintTop_toBottomOf="@id/contentImg"
            app:layout_constraintEnd_toEndOf="@id/bg_View"
            android:layout_marginTop="@dimen/dp_10"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出教室"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/dialog_btn_sure_text"
            android:background="@drawable/dialog_button_cancel_bg"
            app:layout_constraintStart_toStartOf="@id/bg_View"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@id/confirm"
            app:layout_constraintTop_toBottomOf="@id/content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/bg_View"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再想一下"
            android:paddingStart="@dimen/dp_20"
            android:paddingEnd="@dimen/dp_20"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_10"
            android:textColor="@color/dialog_btn_sure_text"
            android:background="@drawable/dialog_button_sure_bg"
            app:layout_constraintStart_toEndOf="@id/cancel"
            app:layout_constraintEnd_toEndOf="@id/bg_View"
            android:layout_marginEnd="@dimen/dp_16"
            app:layout_constraintTop_toTopOf="@id/cancel"
            app:layout_constraintBottom_toBottomOf="@id/cancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
