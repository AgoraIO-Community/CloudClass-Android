<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/tool_window_popup_width"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/tool_window_popup_bg">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tool_window_popup_recycler_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tool_window_popup_recycler_thickness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_window_popup_line_padding"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tool_window_popup_recycler_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tool_window_popup_line_padding"/>
</LinearLayout>