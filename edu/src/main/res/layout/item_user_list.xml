<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/dp_10"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp_14"
        android:ellipsize="end"
        android:maxEms="20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_grant_board"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center_vertical|start|left"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="@dimen/sp_14"
        android:autoSizeMinTextSize="@dimen/sp_10"
        android:autoSizeStepGranularity="1sp"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_mute_video"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/ic_video_gray"
        android:layout_marginEnd="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_mute_audio"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:src="@drawable/ic_audio_gray"
        android:layout_marginEnd="@dimen/dp_11"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_mute_video"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_btn_grant_board"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:clickable="false"
        android:layout_marginEnd="@dimen/dp_11"
        android:src="@drawable/ic_board"
        android:state_selected="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_mute_audio"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/gray_EEEEEE"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
