<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1. "
        android:textColor="@color/theme_hint_text_color"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/choice_content"
        app:layout_constraintBottom_toBottomOf="@id/choice_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/choice_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:maxLines="1"
        android:maxLength="30"
        android:singleLine="true"
        android:minLines="1"
        android:background="@drawable/agora_widget_vote_choice_edittext_bg"
        android:hint="@string/fcr_poll_input_placeholder"
        android:paddingVertical="10dp"
        android:textColor="@color/theme_black"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/index" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/theme_divider_color_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choice_content" />

</androidx.constraintlayout.widget.ConstraintLayout>
















