<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/right_to_left_layout"
    >

    <LinearLayout
        android:layout_alignParentRight="true"
        android:background="@color/fcr_white"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/fcr_my_cloud_file_help_text"
                android:textColor="#191919"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mycloud_file_help_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:padding="16dp"
                android:src="@drawable/fcr_share_room_close" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="PowerPoint文档演示"
            />
    </LinearLayout>


</RelativeLayout>