<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/agora_shadowed_round_rect_bg">

    <RelativeLayout
        android:id="@+id/agora_setting_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/agora_setting_camera_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_popup_camera_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/agora_setting_popup_switch_height"
                android:layout_alignTop="@id/agora_setting_popup_camera_switch"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginLeft="@dimen/agora_setting_popup_margin_horizontal"
                android:gravity="center_vertical"
                android:text="@string/agora_setting_camera"
                android:textAlignment="gravity"
                android:textColor="@color/theme_text_color_black"
                android:textSize="@dimen/agora_setting_popup_text_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/agora_setting_popup_camera_switch"
                android:layout_width="@dimen/agora_setting_popup_switch_width"
                android:layout_height="@dimen/agora_setting_popup_switch_height"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/agora_setting_popup_margin_vertical"
                android:layout_marginEnd="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginRight="@dimen/agora_setting_popup_margin_horizontal"
                android:background="@drawable/agora_option_popup_setting_switch" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/agora_setting_popup_facing_button_height"
                android:layout_below="@id/agora_setting_popup_camera_text"
                android:layout_alignStart="@id/agora_setting_popup_camera_text"
                android:layout_alignTop="@id/agora_setting_popup_camera_back"
                android:gravity="center"
                android:text="@string/agora_setting_facing"
                android:textAlignment="gravity"
                android:textSize="@dimen/agora_setting_popup_text_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_popup_camera_back"
                android:layout_width="@dimen/agora_setting_popup_facing_button_width"
                android:layout_height="@dimen/agora_setting_popup_facing_button_height"
                android:layout_below="@id/agora_setting_popup_camera_switch"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/agora_setting_popup_margin_vertical"
                android:layout_marginEnd="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginRight="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginBottom="@dimen/agora_setting_popup_margin_vertical"
                android:background="@drawable/agora_setting_button_bg"
                android:gravity="center"
                android:text="@string/agora_setting_facing_back"
                android:textAlignment="gravity"
                android:textColor="@color/agora_setting_button_text_color"
                android:textSize="@dimen/agora_setting_popup_text_size" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_popup_camera_front"
                android:layout_width="@dimen/agora_setting_popup_facing_button_width"
                android:layout_height="@dimen/agora_setting_popup_facing_button_height"
                android:layout_below="@id/agora_setting_popup_camera_switch"
                android:layout_alignTop="@id/agora_setting_popup_camera_back"
                android:layout_marginEnd="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_toStartOf="@id/agora_setting_popup_camera_back"
                android:layout_toLeftOf="@id/agora_setting_popup_camera_back"
                android:background="@drawable/agora_setting_button_bg"
                android:gravity="center"
                android:text="@string/agora_setting_facing_front"
                android:textAlignment="gravity"
                android:textColor="@color/agora_setting_button_text_color"
                android:textSize="@dimen/agora_setting_popup_text_size" />
        </RelativeLayout>

        <View
            android:id="@+id/agora_setting_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thin"
            android:layout_below="@id/agora_setting_camera_layout"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginLeft="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_large"
            android:background="@color/theme_border_class_room" />

        <RelativeLayout
            android:id="@+id/agora_setting_popup_mic_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_setting_popup_line_height"
            android:layout_below="@id/agora_setting_divider"
            android:layout_marginTop="@dimen/agora_setting_popup_margin_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_mic_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginLeft="@dimen/agora_setting_popup_margin_horizontal"
                android:gravity="center_vertical"
                android:text="@string/agora_setting_mic"
                android:textAlignment="gravity"
                android:textColor="@color/theme_text_color_black"
                android:textSize="@dimen/agora_setting_popup_text_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/agora_setting_popup_mic_switch"
                android:layout_width="@dimen/agora_setting_popup_switch_width"
                android:layout_height="@dimen/agora_setting_popup_switch_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginRight="@dimen/agora_setting_popup_margin_horizontal"
                android:background="@drawable/agora_option_popup_setting_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/agora_setting_volume_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/agora_setting_popup_line_height"
            android:layout_below="@id/agora_setting_popup_mic_layout"
            android:layout_marginTop="@dimen/agora_setting_popup_margin_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_volume_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginLeft="@dimen/agora_setting_popup_margin_horizontal"
                android:gravity="center_vertical"
                android:text="@string/agora_setting_speaker"
                android:textAlignment="gravity"
                android:textColor="@color/theme_text_color_black"
                android:textSize="@dimen/agora_setting_popup_text_size" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/agora_setting_popup_volume_switch"
                android:layout_width="@dimen/agora_setting_popup_switch_width"
                android:layout_height="@dimen/agora_setting_popup_switch_height"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginRight="@dimen/agora_setting_popup_margin_horizontal"
                android:background="@drawable/agora_option_popup_setting_switch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/agora_setting_exit_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/agora_setting_popup_margin_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/agora_setting_exit_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/agora_setting_popup_leave_button_height"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginLeft="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginEnd="@dimen/agora_setting_popup_margin_horizontal"
                android:layout_marginRight="@dimen/agora_setting_popup_margin_horizontal"
                android:background="@drawable/agora_option_setting_leave_btn_bg"
                android:gravity="center"
                android:text="@string/agora_setting_leave"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/agora_setting_popup_text_size" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>