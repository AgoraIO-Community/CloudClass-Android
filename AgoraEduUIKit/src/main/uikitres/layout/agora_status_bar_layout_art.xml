<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/agora_class_room_rect_bg">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/agora_status_bar_network_state_icon"
        android:layout_width="@dimen/agora_status_bar_icon_size"
        android:layout_height="@dimen/agora_status_bar_icon_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginLeft="@dimen/margin_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_status_bar_class_time_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:text="@string/toast_classtime_default"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:textColor="@color/theme_text_color_class_time"
        android:textSize="@dimen/text_small"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_status_bar_class_started_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/agora_status_bar_class_time_text"
        android:layout_toStartOf="@id/agora_status_bar_class_time_text"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:textColor="@color/theme_text_color_class_time"
        android:textSize="@dimen/text_small"
        tools:ignore="RelativeOverlap"/>

    <View
        android:id="@+id/agora_status_bar_center_divider"
        android:layout_width="@dimen/divider_thin"
        android:layout_height="match_parent"
        android:layout_toStartOf="@id/agora_status_bar_class_started_text"
        android:layout_toLeftOf="@id/agora_status_bar_class_started_text"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@color/theme_border_class_room"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/agora_status_bar_classroom_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/agora_status_bar_center_divider"
        android:layout_toStartOf="@+id/agora_status_bar_center_divider"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:textAlignment="gravity"
        android:gravity="center_vertical|right|end"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/theme_text_color_black"
        android:textSize="@dimen/text_small"/>
</RelativeLayout>